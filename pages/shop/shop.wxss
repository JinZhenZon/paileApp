/* pages/shop/shop.wxss */

Page {
  background: #f7f7f7;
}
.pageTitle{
  width:750rpx;
  height:100rpx;
  display:flex;
  display:-webkit-flex;
  justify-content: center;
  align-items:center;
}
.box {
  background: #fff;
  height: 60rpx;
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
  border-radius: 60rpx;
  width: 700rpx;
  margin: 0 auto;
}

.searchHolder {
  text-align: left;
  line-height: 60rpx;
  color: #999;
  font-size: 30rpx;
}

.search {
  line-height: 60rpx;
  height: 60rpx;
  width: 600rpx;
  font-size: 40rpx;
  color: #666;
}

/* 店铺信息 */

.shopInfo {
  width: 720rpx;
  padding: 15rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.shop_icon {
  width: 150rpx;
  height: 150rpx;
}

.shop_icon image {
  width: 150rpx;
  height: 150rpx;
}

.shop_info_main {
  width: 450rpx;
}

.shop_title {
  font-size: 32rpx;
  line-height: 60rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop_business {
  font-size: 25rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 450rpx;
  max-height: 100rpx;
  color: #aeaeae;
  word-break: break-all;
}

.shop_info_btn {
  width: 80rpx;
  text-align: center;
  border-left: 1rpx solid #f2f2f2;
}

.shop_info_btn .like {
  display: inline-block;
  width: 80rpx;
  height: 70rpx;
  text-align: center;
}

.like text {
  font-size: 60rpx;
  color: #f55;
}

.link_text {
  font-size: 25rpx;
  line-height: 40rpx;
  color: #f55;
}

/* nav */

.nav {
  width: 750rpx;
  background: #fff;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.nav .navbar {
  line-height: 60rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: -webkit-box;
  box-sizing: border-box;
}

.nav .current {
  color: #f55;
  border-bottom: 4rpx solid #f55;
  font-size: 32rpx;
}

.nav .normal {
  color: #aeaeae;
  font-size: 28rpx;
}
