Page{
  background:#f2f2f2;
  
}
.user_box{
  width:720rpx;
  padding:15rpx;
  background:#fff;
  margin-top:20rpx;
  align-items: center;
  margin-bottom:24rpx;
}

.header_icon{
  width:150rpx;
  height:150rpx;
}
.header_icon image{
  width:150rpx;
  height:150rpx;
  border-radius:20rpx;
}
.user_Info{
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height:70rpx;
  color:#333;
  font-weight: 800;
  width:530rpx;
}
.user_sex{
  color:#aeaeae;
  font-size:30rpx;
  line-height:50rpx;
}

/* 菜单 */
.seeting_ban{
  background:#fff;
  margin-top:4rpx;
  align-items: center;
}
.seeting_ban .title{
  color:#333;
  line-height:80rpx;
  font-size: 30rpx;
  width:200rpx;
} 
.seeting_ban .contant{
  width:520rpx;
  font-size:40rpx;
  line-height:80rpx;
  text-align:right;
}
.seeting_ban .contant image{
  width:50rpx;
  height:50rpx;
  transform: translateY(15rpx)
}
.mask{ 
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:750rpx;
  background:rgba(30,30,30,0.4);
  z-index: 9;
  overflow:hidden;
}