/* pages/goodShow/goodShow.wxss */
Page{
  background:#fff;
  overflow-y: hidden;
} 
.scroll{
  position:absolute;
  height:100%;
}
.title{
  background:#f2f2f2;
  color:#f55;
  font-size:30rpx;
  line-height:80rpx;
  height:80rpx;
  text-align: center;

}
.title text{
  
  padding-left:15rpx;
  display: inline-block;
  margin:0 auto;
}
.itemBox{
  width:730rpx;
  padding:10rpx;

  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goodTitle{
  width:600rpx;
  font-size:35rpx;
  line-height:60rpx;
  max-height: 120rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
  word-break:break-all;
}
.share{
  width:120rpx;
}
.share button {
  color:rgb(250, 116, 43);
  font-size:30rpx;
  padding:0;
  border:0px 0px #fff;
  outline:none;
  background:#fff;
  box-sizing:inherit;
}
.share button::after{ border: none; }
/* 价格 */
.price{
  font-size:40rpx;
  color:#f33;
  font-weight: 800;
  line-height:60rpx;
}
.selar_count{
  font-size:30rpx;
  color:#aeaeae;
  line-height:60rpx;
}

.itemLine{
  width:750rpx;
  height:80rpx;
  border-top:1rpx solid #f2f2f2;
}
.itemI{
  width:720rpx!important;
  margin: 0 auto;
}
.itemLine .icon{
  width:30rpx;
  height:30rpx;
  margin-top:-20rpx;
  margin-right:10rpx;
}
.itemLine .text{
  width:670rpx;
  height:60rpx;
  font-size:28rpx;
  color:#aeaeae;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height:60rpx;
}

/* 底部导航栏 */
.menuBox{
  width:750rpx;
  height:120rpx;
  background:#f2f2f2;
  display: flex;
  justify-content:space-between;
  align-items: center;
  flex-wrap: wrap;
  position:fixed;
  bottom:0;
  z-index:999;
  border-top:1rpx solid #aeaeae;
}
.menu_icon_small{
  width:187.5rpx;
  border-right:3rpx solid #aeaeae;
  display: -webkit-box;
  box-sizing:border-box;
  text-align:center;
  height:120rpx;
  display: inline-block;
  margin-top:20rpx;
}
.menu_icon_small:nth-child(2){
  border:0px solid #fff;
}
.menu_icon_small .icon{
  width:175.5rpx;
  margin:0 auto;
  text-align: center;
}

.menu_icon_small view{
  font-size:30rpx;
  color:#aeaeae;
  width:187.5rpx;
  line-height:35rpx;
  display: block;
  text-align:cneter;
}
.menu_icon_big{
  width:375rpx;
  text-align: center;
  color:#fff;
  height:120rpx;
  line-height:120rpx;
}

/* 立即购买后的选择框 */
.pugBox{
  width:750rpx;
  height:1000rpx;
  background:#fff;
  position:fixed;
  bottom:-1000rpx;
  z-index:1000;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.pugBox_title{
  width:700rpx;
  margin:0 auto;
  position:relative;
  padding-bottom:10rpx;
  border-bottom:1rpx solid #f2f2f2;
}
.pugBoxBot{
  width:750rpx;
  background:rgb(248, 104, 104);
  color:#fff;
  text-align:center;
  line-height:100rpx;
  font-size:40rpx;
  height:100rpx;
  border-top:1rpx solid #aeaeae;
}
.pugBox_icon{
  width:200rpx;
  position:absolute;
  top:-60rpx;

}
.pugBox_icon image{
  width:200rpx;
  border-radius:20rpx;
  height:200rpx
}
.pugBox_text{
  font-size:40rpx;
  width:300rpx;
  margin-left:250rpx;
}
.price{
  color:#f33;
}
.tag{
  line-height:40rpx;
  color:#aeaeae;
  font-size:25rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height:40rpx;
}
