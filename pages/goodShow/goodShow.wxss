/* 遮罩 */
.mask{
  position:fixed;
  top:0;
  left:0;
  height:100%;
  width:750rpx;
  background:rgba(30,30,30,0.4);
  z-index: 9;
  overflow:hidden;
}
.pugBoxInner{
  padding-top:20rpx;
  width:720rpx;
  margin:0 auto;
  height:730rpx;
}
.desc{
  display: flex;
  align-items: cneter;
  justify-content: flex-start;
  flex-wrap:wrap;
}
.descTitle{
  font-size:32rpx;
  line-height:90rpx;
}
.descItem{
  padding-left:20rpx;
  padding-right:20rpx;
  font-size: 30rpx;
  line-height:60rpx;
  border-radius:10%;
  margin-top:10rpx;
  margin-left:10rpx;
}
.cursor{
  background:rgb(248, 104, 104);
  color:#fff;
}
.normal{
  background:#f2f2f2;
  color:#333
}

