/* pages/components/list/list.wxss */
.main{
  width:750rpx;

}
.goodItem {
  margin-top:10rpx;
  width:360rpx;
  height:550rpx;
  float: left;
  margin-left:10rpx;
  background:#fff;
  box-shadow:0rpx 0rpx 3rpx 3rpx #eee;
  border-radius:10rpx;
  overflow:hidden;
}
.itemImg{
  width:360rpx;
  height:360rpx;
}
.goodTitle{
  width:320rpx;
  margin:0 auto;
  font-size:30rpx;
  line-height:40rpx;
  height:80rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break:break-all;
}
.line text{
    width:48%;
    float: left;
    font-size:30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.line text:nth-child(2){
  margin-left:3%;
}
