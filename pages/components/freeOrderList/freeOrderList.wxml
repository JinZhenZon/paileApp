<wxs src="./filter.wxs" module="filter" />
<view style = "background:#f2f2f2">
      <block  wx:for = "{{list}}" wx:key= "{{index}}">
          <view class = "listBox">
              <view class = "list_top">
                  <view class = "shopIcon">
                      <image src = "{{item.shopIcon}}"  binderror = "errorImgShop"  data-errorimg="{{index}}" ></image>
                  </view>
                  <view class = "shopName">
                      {{item.shopName}}
                  </view>
                  <view class = "status">
                      {{filter.filterStatus(item.status)}}
                  </view>
              </view>
              <!-- ?orderNumber={{item.orderNumber}} -->
              <navigator url = "/pages/orderInsert/orderInsert?orderNumber={{item.orderNumber}}"  hover-class='none' class = "list_contine">
                    <view class  = "cargoLeft">
                        <image src = "{{item.cargoList[0].cargoPicture}}"  binderror = "errorImgCargo"  data-errorimg="{{index}}"></image>
                    </view>
                    <view class = "cargoCenter">
                        <view class = "cargoTitle">
                            {{item.cargoList[0].cargoTitle}}
                        </view>
                        <view class = "cargoSpec">
                            {{item.cargoList[0].cargoSpec}}
                        </view>
                    </view>
                    <view class='cargoRight'>
                        <view class = "price">￥ 0</view>
                        <view class = "normalPrice">￥ {{item.cargoList[0].presentPrice/100}}</view>
                        <view class = "cargoCount">x {{item.cargoList[0].cargoCount}}</view>
                    </view> 
              </navigator>
              <view class = "tip">
                  共 {{item.cargoList[0].cargoCount}} 件商品 实付款 0 元
              </view>
              <view class = "bottom">
                  <view wx:if = "{{item.status == 1 || item.status == 3}}" catchtap = "removeOrder" data-orderInfo = "{{item}}" data-index = "{{index}}" class = "bottom_btn normal_btn">
                      删除订单
                  </view>
                  <view class = "bottom_tip" wx:if = "{{item.status == 5}}">
                        邀请剩余：<view style = "color:#f55;display:inline-block">{{filter.timeTostr(item.experienceTeam.remainingInvitationTime)}}
                        </view>
                  </view>
                  <view wx:if = "{{item.status == 5}}" catchtap='invit' data-orderInfo = "{{item}}" class = "bottom_btn gradual_btn">
                      邀请好友
                  </view>
                  <view class = "bottom_tip" wx:if = "{{item.status == 7}}">
                        抽奖剩余：<view style = "color:#f55;display:inline-block">{{filter.timeTostr(item.experienceTeam.remainingActivityTime)}}
                        </view>
                  </view>
                  <view wx:if = "{{item.status == 8}}" catchtap = "urdeOrder"  class = "bottom_btn gradual_btn">
                      催发货
                  </view>
                  <view wx:if = "{{item.status == 10}}" catchtap = "confirmOrder" data-orderInfo = "{{item}}" data-index = "{{index}}"  class = "bottom_btn gradual_btn">
                      确定收货
                  </view>
                  <view wx:if = "{{item.status == 10}}" catchtap = "logistics" data-orderInfo = "{{item}}" class = "bottom_btn normal_btn">
                      查看物流
                  </view>
                  <view wx:if = "{{item.status == 15}}" catchtap='evalOrder' data-orderInfo = "{{item}}"  class = "bottom_btn gradual_btn">
                      立即评价
                  </view>
              </view>
              <view style = "clear:both"></view>
          </view>
      </block>
      <model id = "Model" config = "{{modelConfig}}"/>
</view>