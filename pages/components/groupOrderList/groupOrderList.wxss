/* pages/components/orderList/orderList.wxss */
page{
  background:#f2f2f2;
}
.listBox{
    background:#fff;
    width:750rpx;
    height:auto;
    margin-top:20rpx;
}
.list_top{
  display: -webkit-flex;
  display: flex;
  justify-content:space-between;
  align-items: center;
}
.shopIcon{
  width:50rpx;
  height:50rpx;
  align-content: center;
  align-items:center;
  justify-content: center;
  margin-left:10rpx;
}
.shopIcon image{
  width:100%;
  height:100%;
}
.shopName{
  width:550rpx;
  font-size:25rpx;
  line-height:60rpx;
  padding:0 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
}
.status{
  width:100rpx;
  padding:0 20rpx;
  font-size:25rpx;
  line-height:60rpx;
  color:#f55;
}
/* 中间 */
.list_contine{
  padding:20rpx 15rpx;
  background:#f2f2f2;
  display:flex;
  width:720rpx;
  margin:0 auto;
  justify-content: space-around;
}
.cargoLeft{
  width:150rpx;
  height:150rpx;
}
.cargoLeft image{
  width:100%;
  height:100%;
  border-radius:7rpx;
}
.cargoCenter{
  width:450rpx;
  padding:0 10rpx;
}
.cargoTitle{
    font-size:30rpx;
    color:#333;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp : 2;
    display: -webkit-box;
    -webkit-box-orient:vertical;
    line-height:50rpx;
    word-break:break-all;
}
.cargoSpec{
  font-size:25rpx;
  line-height:50rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color:#aeaeae;
}
.cargoRight{
  width:130rpx;
}
.price{
  text-align: right;
  font-size:25rpx;
  color:#f55;
  line-height:50rpx;
}
.normalPrice{
  text-align: right;
  font-size:25rpx;
  color:#aeaeae;
  line-height:50rpx;
  text-decoration:line-through;
}
.cargoCount{
  text-align: right;
  font-size:25rpx;
  color:#999;
  line-height:50rpx;
}
.tip{
  font-size:30rpx;
  text-align:right;
  width:720rpx;
  margin:0 auto;
  line-height:60rpx;
  color:#333;
}
.bottom{
  border-top:2rpx solid #f2f2f2;
}
.bottom_tip{
  float:left;
  margin-left:20rpx;
  width:450rpx;
  height:60rpx;
  text-align:left;
  line-height:60rpx;
  font-size:26rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color:#aeaeae;
}
.bottom_btn{
  float:right;
  margin-right:20rpx;
  width:160rpx;
   height:60rpx;
  text-align:center;
  line-height:60rpx;
  border-radius:60rpx;
  font-size:26rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.gradual_btn{
  background: -webkit-linear-gradient(
    left,
    #fdb591,
    #ea5556
  ); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(
    right,
    #fdb591,
    #ea5556
  ); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(
    right,
    #fdb591,
    #ea7855
  ); /* Firefox 3.6 - 15 */
  background: linear-gradient(to right, #fdb591, #ea5556); /* 标准的语法 */
  color:#fff;
}
.normal_btn{
  background:#fff;
  color:rgb(233,114,76);
  border:1px solid rgb(233,114,76);
  box-sizing: border-box;
  line-height:58rpx;
}