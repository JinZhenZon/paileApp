/* 并排一行 */
@import "../../../utils/iconfont.wxss";

.lineBox{
  display: -webkit-flex;
  display: flex;
  justify-content: space-around;
}
/* 4个icon */
.pagemenu{
  width:750rpx;
  margin-top:20rpx;
  margin-bottom:20rpx;
}
.pagemenu view{
    text-align:center;
    width:140rpx;
    line-height:45rpx;
    font-size:30rpx;
}
.pagemenu view image{
  width:100rpx;
  height:100rpx;
}
/* 页面主体 */
.main{
  background:#f2f2f2;
}
.tarit{
   float:left;
  margin-top:-45rpx;
  font-size:30rpx;
  line-height:90rpx;
  background: -webkit-linear-gradient(
    left,
    rgb(247, 87, 123),
    rgb(254, 82, 215)
  ); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(
    right,
    rgb(247, 87, 123),
    rgb(254, 82, 215)
  ); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(
    right,
    rgb(247, 87, 123),
    rgb(254, 82, 215)
  ); /* Firefox 3.6 - 15 */
  background: linear-gradient(
    to right,
    rgb(247, 87, 123),
    rgb(254, 82, 215)
  ); /* 标准的语法 */
  color:#fff;
  width:275rpx;
  text-align: center;
  border-top-right-radius: 45rpx;
  border-bottom-right-radius: 45rpx;
 
}
/* 查看更多 */
.seemore{
  float: right;
  width:150rpx;
  font-size:30rpx;
  line-height:90rpx;
  color:rgb(254, 82, 215);
  margin-top:-45rpx;
  text-align:cneter;  
}
/* 品质爆款 */
.line text{
    width:48%;
    float: left;
    font-size:30rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    margin-top:-30rpx;
}
.line text:nth-child(2){
  margin-left:3%;
}
.goodTitle{
  margin:0 auto;
  font-size:30rpx;
  line-height:40rpx;
  height:80rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  
  -webkit-box-orient: vertical;
}