/* pages/sign/sign.wxss */

Page {
  background: #f2f2f2;
}

.addressBox {
  width: 750rpx;
  height: 100rpx;
  position: relative;
}

.address {
  width: 700rpx;
  position: absolute;
  left: 25rpx;
  background: #fff;
  height: 200rpx;
  border-radius: 15rpx;
  display: flex;
  justify-content: space-around;
  align-items: cneter;
}

.address_iconBox {
  width: 100rpx;
  height: 100rpx;
  align-self: center;
}

.address_textBox {
  width: 550rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  align-self: center;
}

.username {
  width: 280rpx;
  float: left;
  display: block;
}

.phone {
  width: 240rpx;
  float: right;
  display: block;
  text-align: center;
}

.address_address {
  height: 100rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 550rpx;
  margin-top: 50rpx;
  word-break: break-all;
}

/* 新增收货地址按钮 */

.add_address_btn {
  width: 280rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 auto;
  font-size: 30rpx;
  text-align: center;
  border-radius: 70rpx;
  color: #fff;
  background: linear-gradient(230deg, rgba(232, 98, 120, 1) 0%, rgba(232, 98, 120, 1) 0%, rgba(255, 82, 229, 1) 100%, rgba(255, 82, 229, 1) 100%);
  background: -webkit-linear-gradient(230deg, rgba(232, 98, 120, 1) 0%, rgba(232, 98, 120, 1) 0%, rgba(255, 82, 229, 1) 100%, rgba(255, 82, 229, 1) 100%);
}

/* 店铺显示 */

.good_shop {
  width: 700rpx;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  background: #fff;
  margin: 0 auto;
}

.shop_icon {
  width: 45rpx;
  height: 45rpx;
  border-radius: 5rpx;
  align-items: center;
}

.shop_name {
  width: 640rpx;
  height: 80rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 商品信息 */

.good_info {
  width: 730rpx;
  margin: 0 auto;
  padding: 20rpx 0rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
  margin-top: 2rpx;
}

.good_image {
  align-items: center;
  width: 180rpx;
}

.good_text {
  width: 530rpx;
}

.good_title {
  font-size: 32rpx;
  line-height: 40rpx;
  max-height: 80rpx;
  min-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.good_desc {
  font-size: 28rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #aeaeae;
}

.good_price {
  font-size: 35rpx;
  color: #f55;
  font-weight: 800;
  line-height: 60rpx;
}

/* 下面通栏 */

.orther_item {
  width: 750rpx;
  padding: 15rpx 0rpx;
  background: #fff;
  margin-top: 2rpx;
  display: -webkit-flex;
  align-content: center;
  justify-content: center;
}

.item_title {
  width: 200rpx;
  font-size: 30rpx;
  line-height: 50rpx;
}

.item_num_picker {
  display: flex;
  align-content: center;
  justify-content: flex-end;
  align-items: center;
  text-align: right;
  width: 500rpx;
}

.item_num_picker button {
  width: 45rpx;
  height: 45rpx;
  text-align: center;
  line-height: 45rpx;
  padding: 0;
  margin: 0;
  float: left;
}

.item_num {
  font-size: 30rpx;
  line-height: 50rpx;
  float: left;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.picker {
  font-size: 30rpx;
  line-height: 50rpx;
}

.item_liuyan_box {
  width: 700rpx;
  padding: 0rpx 25rpx;
  margin: 0 auto;
  background: #fff;
  margin-top: 2rpx;
  padding-bottom: 10rpx;
}

.item_liuyan {
  width: 700rpx;
  border: 1px solid #eee;
  height: 135rpx;
  font-size: 30rpx;
  line-height: 45rpx;
}

.item_order_price {
  color: #f55;
  font-size: 35rpx;
}

.order_bottom {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  width: 750rpx;
}

.order_tip {
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  line-height: 60rpx;
  text-align: center;
}

.order_confirm_btn {
  color: #fff;
  text-align: center;
  font-size: 35rpx;
  line-height: 60rpx;
  border-radius: 60rpx;
  width: 200rpx;
  background: linear-gradient(230deg, rgba(232, 98, 120, 1) 0%, rgba(232, 98, 120, 1) 0%, rgba(255, 82, 229, 1) 100%, rgba(255, 82, 229, 1) 100%);
  background: -webkit-linear-gradient(230deg, rgba(232, 98, 120, 1) 0%, rgba(232, 98, 120, 1) 0%, rgba(255, 82, 229, 1) 100%, rgba(255, 82, 229, 1) 100%);
}
