Page{
  background:#fff;
}
.good_box{
  width:720rpx;
  padding:15rpx;
  display:flex;
  justify-content: space-around;
  align-items: center;
  border-top:5rpx solid #f2f2f2;
}
.good_icon{
  width:180rpx;
  height:180rpx;
}
.good_icon image{
  width:180rpx;
  height:180rpx;
}


.good_body{
  width:520rpx;
  height:180rpx;
}
.good_title{
  width:520rpx;
  line-height:40rpx;
  color:#333;
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2;
  word-break:break-all;
  -webkit-box-orient:vertical;
  max-height:80rpx;
}
.good_normalPrice{
  color:#aeaeae;
  text-decoration: line-through;
  font-size: 25rpx;
  line-height:50rpx;
  float:left;
}
.discount_box{
  color:rgb(255,102,51);
  font-size: 30rpx;
  line-height:50rpx;
  float:left;
  margin-left:30rpx;
}
.good_nowPrice{
  clear:both;
  color:#f55;
  font-size: 30rpx;
  line-height:40rpx;
  /* font-weight:800; */
}
.Info{
  display: flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}
.Info .left{
  width:350rpx;
}
.Info .right{
  width:170rpx;
  text-align: center;
  color:#f55;
  font-size: 26rpx;
  line-height:45rpx;
  margin-top:5rpx;
  height:90rpx;
}
.Info .right text{
  font-size:40rpx;
  line-height:50rpx;
}

/*
  底部提示 
*/
.tip_bt{
  font-size:28rpx;
  color:#aeaeae;
  text-align: center;
  line-height: 50rpx;
  clear:both
}
/* 
  没有任何数据时候 页面自适应高度试用
 */
 .notData_box{
   display:flex;
   justify-content: flex-start;
   flex-direction:column;
   height:100%;
   width:100%;
   position:relative;
 }
 .box_style{
   width:100%;
   text-align:center;
   padding-top:50%;
 }
 .nodata_icon text{
   color:#aeaeae;
   font-size:120rpx;
   top:50%;
 }
  .nodata_text{
    color:#aeaeae;
    font-size: 30rpx;
    line-height: 70rpx;
  }
 /* 去掉分享button的样式 */
 #share_btn{
   padding-left:0;
   padding-right:0;
  border-radius:0;
  background:#fff;
 }
 #share_btn::after{ 
   border: none; 
  } 